//-----------------------------------------------------------------------------
//  Update_Sys_Time Update time according to host time.
//
//  Parameters:     None.
//
//  Global Inputs:  None.
//
//  Returns:        Nothing.
//
//  Notes:          None.
//
//-----------------------------------------------------------------------------

extern void Update_Sys_Time( void )
{
	UBYTE cbuf[14];

	/* Update the Date & Time */
	memset( cbuf, 0,14 );

	BfAscii( ( char * ) cbuf, TCONF.TCDATE, 6 );

	SDK_RtcWrite( cbuf, 12 );
}


